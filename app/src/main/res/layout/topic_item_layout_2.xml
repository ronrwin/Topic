<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">


    <TextView
        android:id="@+id/topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/topic_title_color"
        android:textSize="@dimen/topic_item_title_size" />

    <TextView
        android:id="@+id/topic_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="120dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/topic_time"
        android:textSize="@dimen/topic_item_time_size" />

    <ImageView
        android:id="@+id/topic_thumb"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:background="@color/default_item"
        android:scaleType="centerCrop" />
</RelativeLayout>

