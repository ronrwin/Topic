<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">


    <TextView
        android:id="@+id/topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/topic_title_color"
        android:textSize="@dimen/topic_item_title_size" />

    <LinearLayout
        android:id="@+id/thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/topic_title"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topic_thumb_1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/default_item"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/topic_thumb_2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/default_item"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/topic_thumb_3"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/default_item"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/topic_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/thumb_layout"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:textColor="@color/topic_time"
        android:textSize="@dimen/topic_item_time_size" />

</RelativeLayout>

